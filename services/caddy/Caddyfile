{
    local_certs
    auto_https disable_redirects
}

http://bootstrap.local {
    file_server browse {
        root /wireguard
    }  
}

http://*.cacert {
    file_server browse {
        root /data/caddy/pki/authorities/local/
    }
}

http://local.dns {
    rewrite * /admin{uri}
    reverse_proxy localhost:10001
}

http://roaming.dns {
    rewrite * /admin{uri}
    reverse_proxy localhost:10002
}

dns.local {
    rewrite * /admin{uri}
    reverse_proxy localhost:10002
}

:443 {
    tls internal
}
